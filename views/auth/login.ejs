<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <main>
        <% if (errorMessage.length> 0) { %>
          <div class="user-message user-message--error">
            <% errorMessage.forEach((message)=> { %>

              <p>
                <%= message.msg %>
              </p>
              <% })%>
          </div>
          <% } %>
            <form action="/login" method="post" novalidate>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= errorMessage.find(err => err.param === 'email') ? 'invalid' : '' %>" type="email"
                  name="email" id="email" value="<%= oldInput.email %>">
              </div>

              <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errorMessage.find(err => err.param === 'password') ? 'invalid' : '' %>"
                  type="password" name="password" id="password" value="<%= oldInput.password %>">
              </div>

              <button class="btn" type="submit">Login</button>
            </form>
            <div class="centered">
              <a href="/reset-password">Reset Password</a>
            </div>
      </main>
      <%- include('../includes/end.ejs') %>